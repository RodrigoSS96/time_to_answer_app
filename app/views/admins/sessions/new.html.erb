<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-15 col-lg-12 col-md-15">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-3 d-none d-lg-block"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Login Administrativo</h1>
                                </div>
                                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
                                    
                                    <div class="form-group">
                                        <%= f.email_field :email,
                                            autofocus: true,
                                            class: "form-control form-control-user",
                                            id: "exampleInputEmail", 
                                            placeholder: "Enter Email Address..." %>
                                    </div>

                                    <div class="form_group">
                                        <%= f.password_field :password,
                                            class: "form-control form-control-user",
                                            id: "exampleInputPassword",
                                            placeholder: "Password" %>
                                    </div>
                                    <br>

                                    <% if devise_mapping.rememberable? %>
                                        <div class="form_group">
                                            <div class= "custom-control custom-checkbox small">
                                                <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck" %>
                                                <%= f.label :remember_me, class: "custom-control-label", for: "customCheck" %>
                                            </div>
                                        </div>
                                    <% end %>
                                                                       
                                    <%= f.submit "Log in", class: "btn btn-primary btn-user btn-block" %>
                                <%end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>