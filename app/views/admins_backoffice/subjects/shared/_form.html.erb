<body class="bg-gradient-primary">

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-6 col-lg-12 col-md-9">

        <div class="o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">

            <!-- Nested Row within Card Body -->
            <div class="col-lg-20">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4"><%= action_message %></h1>
                </div>

                <div>
                  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                      <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </symbol>
                  </svg>

                  <% if @subject.errors.any? %>
                    <div class="alert alert-danger d-flex align-items-center" role="aert">
                      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" /></svg>
                      <div>
                        <ul>
                          <% @subject.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    </div>
                  <% end %>

                  <%= form_with(model: [ :admins_backoffice, @subject ], local: true, class:"user") do |form| %>

                  <div class="form-group">

                    <%= form.label :description%>
                    <%= form.text_field :description, 
                        type:"text", 
                        class:"form-control form-control-user",
                        placeholder: t('placeholders.describe_subject') %>

                  </div>

                  <button type="submit" class="btn btn-primary btn-user btn-block"><%= t('buttons.save') %></button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
</body>