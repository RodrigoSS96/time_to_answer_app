<h1><%= t('messages.listing_admin', model: @admins.model_name.human(count: 2)) %></h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= translate_attributes(@admins, :id) %></th>
        <th><%= translate_attributes(@admins, :email) %></th>
        <th>
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
              <i class="fas fa-user-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr style='width:50px'>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td style="width: 100px">
          
            <%= link_to edit_admins_backoffice_admin_path(admin.id), class:"btn btn-primary btn-circle" do %>
              <i class="fas fa-user-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_admin_path(admin.id), method: :delete, class:"btn btn-danger btn-circle",
                data: {confirm: t('messages.confirm_with', item: admin.email)} do %>
              <i class="fas fa-user-minus"></i>
            <% end %>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class='text-center'><%= paginate @admins %></div>
</div>

