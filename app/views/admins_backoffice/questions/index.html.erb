<h1><%= t('messages.listing_other', model: @questions.model_name.human(count: 2)) %></h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= translate_attributes(@questions, :id) %></th>
        <th><%= translate_attributes(@questions, :description) %></th>
        <th><%= translate_attributes(@questions, :subject_id) %></th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
              <i class="fas fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr style='width:50px'>
          <td><%= question.id %></td>
          <td><%= question.description.truncate(100) %></td>
          <td><%= question.subject.description.truncate(50) %></td>
          <td style="width: 100px">

            <%= link_to edit_admins_backoffice_question_path(question.id), class:"btn btn-primary btn-circle" do %>
              <i class="far fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_questions_path(question.id), method: :delete, class:"btn btn-danger btn-circle",
                data: {confirm: t('messages.confirm_with', item: question.description.truncate(20))} do %>
              <i class="far fa-trash-alt"></i>
            <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class='text-center'><%= paginate @questions %></div>
</div>

