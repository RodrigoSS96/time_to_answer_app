<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <h2>Alterar Senha</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

          <div>
            <%= f.password_field :password, placeholder: "Senha", class: "form-control" %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, placeholder: "Confirmar Senha", class: "form-control" %>
          </div>

          <div>
            <%= f.submit "Mudar Senha", class: "btn-btn-default-submit", style: "float: none; margin-left: 0px; width: 100%" %>
          </div>

          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>
